  "bugs": {
    "url": "https://github.com/cinderblock/rdt/issues"
  },
  "homepage": "https://github.com/cinderblock/rdt#readme",
  "dependencies": {
    "@types/ssh2": "^1.15.1",
    "@types/ssh2-streams": "^0.1.12",
    "es-main": "^1.3.0",
    "esbuild": "^0.24.0",
    "esbuild-register": "^3.6.0",
    "glob": "^11.0.0",
    "http-proxy": "^1.18.1",
    "node": "^22.9.0",
    "ssh2": "^1.16.0",
    "tsx": "^4.19.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.8.0",
    "@types/http-proxy": "^1.17.15",
    "@types/node": "^22.7.2",
    "esbuild-plugin-d.ts": "^1.3.0",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3"
  }
