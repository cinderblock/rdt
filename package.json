{
  "name": "@cinderblock/rdt",
  "private": true,
  "version": "0.7.0",
  "description": "A developer tool for working on lightweight remote systems.",
  "bin": {
    "rdt": ".dist/rdt.js"
  },
  "main": ".dist/rdt.js",
  "type": "module",
  "types": ".dist/rdt.d.ts",
  "files": [
    "CHANGES.md",
    ".dist/*"
  ],
  "scripts": {
    "build": "tsx dist/build.ts",
    "build-watch": "tsx dist/build.ts --watch",
