{
  "name": "@cinderblock/rdt",
  "private": true,
  "version": "0.1.1",
  "description": "A developer tool for working on lightweight remote systems.",
  "bin": {
    "rdt": ".dist/rdt.js"
  },
  "main": ".dist/rdt.js",
  "types": ".dist/rdt.d.ts",
  "files": [
    ".dist/*"
  ],
  "scripts": {
    "build": "esr dist/build.ts",
    "build-watch": "esr dist/build.ts --watch",
    "watch": "npm run build-watch",
    "run": "node --enable-source-maps .dist",
    "start": "npm run build && npm run run",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cinderblock/rdt.git"
  },
  "keywords": [
    "TypeScript",
    "Node",
    "Raspberry Pi",
    "esbuild",
    "thin client",
    "remote development"
  ],
  "author": "Cameron Tacklind <cameron@tacklind.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cinderblock/rdt/issues"
  },
  "homepage": "https://github.com/cinderblock/rdt#readme",
  "dependencies": {
    "@types/ssh2": "^1.11.8",
    "@types/ssh2-streams": "^0.1.9",
    "esbuild": "^0.17.11",
    "esbuild-register": "^3.4.2",
    "glob": "^9.3.1",
    "ssh2-promise": "^1.0.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "esbuild-plugin-d.ts": "^1.1.0",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.35.0",
    "prettier": "^2.8.4"
  }
}
